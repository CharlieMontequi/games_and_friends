<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde">

    <ImageView
        android:id="@+id/imV_foto_juego_item_listado_juegos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.032"
        app:srcCompat="@drawable/hexagono_blanco_beige_foreground" />

    <TextView
        android:id="@+id/txt_nombreJuego_item_listado_juego"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="juego"
        android:textColor="#F6F5F1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/imV_foto_juego_item_listado_juegos"
        app:layout_constraintStart_toEndOf="@+id/imV_foto_juego_item_listado_juegos"
        app:layout_constraintTop_toTopOf="@+id/imV_foto_juego_item_listado_juegos"
        app:layout_constraintVertical_bias="0.147" />

    <TextView
        android:id="@+id/txt_nJugadores_item_listado_juegos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="16dp"
        android:text="1-5 jgs"
        android:textColor="#F6F5F1"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imV_foto_juego_item_listado_juegos"
        app:layout_constraintStart_toEndOf="@+id/imageView10"
        app:layout_constraintTop_toBottomOf="@+id/txt_nombreJuego_item_listado_juego"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txt_tiempo_item_listado_jeugos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:text="120min"
        android:textColor="#F6F5F1"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_nJugadores_item_listado_juegos"
        app:layout_constraintStart_toEndOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/txt_nJugadores_item_listado_juegos"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_nJugadores_item_listado_juegos"
        app:layout_constraintStart_toEndOf="@+id/imV_foto_juego_item_listado_juegos"
        app:layout_constraintTop_toTopOf="@+id/txt_nJugadores_item_listado_juegos"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/personas" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_nJugadores_item_listado_juegos"
        app:layout_constraintStart_toEndOf="@+id/txt_nJugadores_item_listado_juegos"
        app:layout_constraintTop_toTopOf="@+id/txt_nJugadores_item_listado_juegos"
        app:srcCompat="@android:drawable/presence_away" />
</androidx.constraintlayout.widget.ConstraintLayout>