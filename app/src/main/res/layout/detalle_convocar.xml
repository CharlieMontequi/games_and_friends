<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F7F3">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar6"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/intento_hexagono_funcional3_foreground"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:rotation="90"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="81dp" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="205dp"
        android:layout_height="85dp"
        android:text="Games\n&amp; Friends"
        android:textColor="#F6F5F1"
        android:textColorLink="#F6F5F1"
        android:textSize="36dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/etxt_nombrePartida"
        android:layout_width="364dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/edit_text_azul"
        android:ems="10"
        android:gravity="center"
        android:hint="Nombre de la sesiÃ³n"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/toolbar6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/toolbar6"
        app:layout_constraintTop_toBottomOf="@+id/toolbar6" />

    <Button
        android:id="@+id/b_proponer_juegos_convocar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Proponer juegos"
        app:layout_constraintEnd_toEndOf="@+id/txt_fechaMarcada"
        app:layout_constraintTop_toBottomOf="@+id/txt_fechaMarcada" />

    <Button
        android:id="@+id/b_compartir_invitacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="148dp"
        android:text="Inivitar"
        app:layout_constraintEnd_toEndOf="@+id/listV_juegosAlllevar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/listV_juegosAlllevar"
        app:layout_constraintTop_toBottomOf="@+id/listV_juegosAlllevar" />

    <ListView
        android:id="@+id/listV_juegosAlllevar"
        android:layout_width="376dp"
        android:layout_height="380dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/edit_text_azul"
        app:layout_constraintEnd_toEndOf="@+id/toolbar6"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="@+id/toolbar6"
        app:layout_constraintTop_toBottomOf="@+id/etxt_nombrePartida" />

    <TextView
        android:id="@+id/txt_fechaMarcada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="184dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="53dp"
        android:text="Sin determinar"
        android:textColor="@color/verde"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="@+id/etxt_nombrePartida"
        app:layout_constraintStart_toStartOf="@+id/etxt_nombrePartida"
        app:layout_constraintTop_toBottomOf="@+id/etxt_nombrePartida" />

    <ImageButton
        android:id="@+id/imB_calendario"
        android:layout_width="115dp"
        android:layout_height="102dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="237dp"
        app:layout_constraintEnd_toEndOf="@+id/etxt_nombrePartida"
        app:layout_constraintStart_toStartOf="@+id/etxt_nombrePartida"
        app:layout_constraintTop_toBottomOf="@+id/etxt_nombrePartida"
        app:srcCompat="@android:drawable/ic_menu_my_calendar" />

</androidx.constraintlayout.widget.ConstraintLayout>