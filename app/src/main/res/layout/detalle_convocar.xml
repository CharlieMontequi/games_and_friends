<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F7F3">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_convocar_detalle"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_convocar_detalle"
        app:layout_constraintEnd_toEndOf="@+id/toolbar_convocar_detalle"
        app:layout_constraintHorizontal_bias="0.002"
        app:layout_constraintStart_toStartOf="@+id/toolbar_convocar_detalle"
        app:layout_constraintTop_toTopOf="@+id/toolbar_convocar_detalle"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/hexagono_blanco_beige_foreground" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:gravity="center"
        android:text="Games &amp; Friends"
        android:textColor="#F6F5F1"
        android:textColorLink="#F6F5F1"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_convocar_detalle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.237"
        app:layout_constraintStart_toStartOf="@+id/toolbar_convocar_detalle"
        app:layout_constraintTop_toTopOf="@+id/toolbar_convocar_detalle"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/etxt_nombrePartida"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/fondo_con_borde_verde"
        android:ems="10"
        android:gravity="center"
        android:hint="Nombre de la sesiÃ³n"
        android:padding="10dp"
        android:inputType="text"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/toolbar_convocar_detalle"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_convocar_detalle" />

    <Button
        android:id="@+id/b_proponer_juegos_convocar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Proponer juegos"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_fechaMarcada"
        app:layout_constraintStart_toStartOf="@+id/txt_fechaMarcada"
        app:layout_constraintTop_toBottomOf="@+id/txt_fechaMarcada" />

    <Button
        android:id="@+id/b_compartir_invitacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="148dp"
        android:text="Invitar"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/listV_juegosAlllevar"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/listV_juegosAlllevar"
        app:layout_constraintTop_toBottomOf="@+id/listV_juegosAlllevar" />

    <ListView
        android:id="@+id/listV_juegosAlllevar"
        android:layout_width="0dp"
        android:layout_height="380dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/fondo_con_borde_verde"
        app:layout_constraintEnd_toEndOf="@+id/etxt_nombrePartida"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="@+id/etxt_nombrePartida"
        app:layout_constraintTop_toBottomOf="@+id/etxt_nombrePartida" />

    <TextView
        android:id="@+id/txt_fechaMarcada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="184dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="53dp"
        android:text="Sin determinar"
        android:textColor="@color/verde"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="@+id/etxt_nombrePartida"
        app:layout_constraintStart_toStartOf="@+id/etxt_nombrePartida"
        app:layout_constraintTop_toBottomOf="@+id/etxt_nombrePartida" />

    <ImageButton
        android:id="@+id/imB_calendario"
        android:layout_width="115dp"
        android:layout_height="102dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="237dp"
        app:layout_constraintEnd_toEndOf="@+id/etxt_nombrePartida"
        app:layout_constraintStart_toStartOf="@+id/etxt_nombrePartida"
        app:layout_constraintTop_toBottomOf="@+id/etxt_nombrePartida"
        app:srcCompat="@android:drawable/ic_menu_my_calendar" />

</androidx.constraintlayout.widget.ConstraintLayout>