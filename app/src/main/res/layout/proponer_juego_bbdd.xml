<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F7F3">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_juevonuevo"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/intento_hexagono_funcional3_foreground" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="205dp"
        android:layout_height="85dp"
        android:text="Games\n&amp; Friends"
        android:textColor="#F6F5F1"
        android:textColorLink="#F6F5F1"
        android:textSize="36dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/etxt_nombreJuego_nuevo"
        android:layout_width="319dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="101dp"
        android:layout_marginEnd="76dp"
        android:background="@drawable/edit_text_azul"
        android:ems="10"
        android:hint="   Nombre del juego"
        android:inputType="text"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="@+id/toolbar_juevonuevo"
        app:layout_constraintStart_toStartOf="@+id/toolbar_juevonuevo"
        app:layout_constraintTop_toTopOf="@+id/toolbar_juevonuevo" />

    <EditText
        android:id="@+id/etxt_descripcionJuego_nuevo"
        android:layout_width="377dp"
        android:layout_height="102dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/edit_text_azul"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="@+id/textView19"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView19"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <EditText
        android:id="@+id/etxt_minjueg_nuevo"
        android:layout_width="60dp"
        android:layout_height="43dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/edit_text_azul"
        android:ems="10"
        android:inputType="number"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView23"
        app:layout_constraintStart_toEndOf="@+id/textView23"
        app:layout_constraintTop_toTopOf="@+id/textView23"
        app:layout_constraintVertical_bias="0.473" />

    <EditText
        android:id="@+id/etxt_maxjug_nuevo"
        android:layout_width="60dp"
        android:layout_height="43dp"
        android:layout_marginStart="27dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/edit_text_azul"
        android:ems="10"
        android:inputType="number"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/etxt_minjueg_nuevo"
        app:layout_constraintStart_toStartOf="@+id/textView26"
        app:layout_constraintTop_toTopOf="@+id/etxt_minjueg_nuevo" />

    <EditText
        android:id="@+id/etxt_duracionjuego_nuevo"
        android:layout_width="121dp"
        android:layout_height="43dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/edit_text_azul"
        android:ems="10"
        android:inputType="number"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView27"
        app:layout_constraintStart_toEndOf="@+id/textView27"
        app:layout_constraintTop_toTopOf="@+id/textView27" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="261dp"
        android:text="Descripción:"
        android:textColor="@color/verde"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/etxt_nombreJuego_nuevo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etxt_nombreJuego_nuevo"
        app:layout_constraintTop_toBottomOf="@+id/etxt_nombreJuego_nuevo" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="319dp"
        android:text="Número de jugadores:"
        android:textColor="@color/verde"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/etxt_descripcionJuego_nuevo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etxt_descripcionJuego_nuevo"
        app:layout_constraintTop_toBottomOf="@+id/etxt_descripcionJuego_nuevo" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="4dp"
        android:text="Duración, en minutos:"
        android:textSize="18sp"
        android:textColor="@color/verde"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView23"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView23"
        app:layout_constraintTop_toBottomOf="@+id/textView23" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@color/verde"
        android:textStyle="bold"
        android:text="-"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="@+id/etxt_minjueg_nuevo"
        app:layout_constraintStart_toEndOf="@+id/etxt_minjueg_nuevo"
        app:layout_constraintTop_toTopOf="@+id/etxt_minjueg_nuevo" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="4dp"
        android:text="Mecánicas en el juego:"
        android:textColor="@color/verde"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView27"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView27"
        app:layout_constraintTop_toBottomOf="@+id/textView27" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="167dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_azul"
        app:layout_constraintEnd_toEndOf="@+id/textView28"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="@+id/textView28"
        app:layout_constraintTop_toBottomOf="@+id/textView28">

        <GridLayout
            android:id="@+id/grid_mecanicas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal"
            android:padding="8dp" />

    </ScrollView>

    <Switch
        android:id="@+id/switch_add_colecciojn_tambien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="93dp"
        android:text="Añadir también a la colección"
        android:textColor="@color/verde"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/scrollView2"
        app:layout_constraintStart_toStartOf="@+id/scrollView2"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <Button
        android:id="@+id/b_agregar_juego"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="81dp"
        android:text="Añadir a la bade de datos"
        app:layout_constraintEnd_toEndOf="@+id/scrollView2"
        app:layout_constraintHorizontal_bias="0.388"
        app:layout_constraintStart_toStartOf="@+id/scrollView2"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />
</androidx.constraintlayout.widget.ConstraintLayout>